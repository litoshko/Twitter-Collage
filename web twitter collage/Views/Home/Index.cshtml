<h4>@ViewBag.errors</h4>

<h2>Collage</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Input your twitter user name</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Text, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Text, new { @class = "form-control", rows = "3" })
                @Html.ValidationMessageFor(model => model.Text)
            </div>
            @Html.LabelFor(model => model.size, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.size, new { @class = "form-control", rows = "3" })
                @Html.ValidationMessageFor(model => model.size)
            </div>
            @Html.LabelFor(model => model.Resize, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.Resize)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>
        <div class="col-md-offset-2 col-md-10">
            @Html.DisplayFor(model => model.Response)
        </div>
    </div>
}
<img src="@ViewBag.ImageData"/>